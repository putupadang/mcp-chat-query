# Server Configuration
PORT=4000
NODE_ENV=development

# API Security
APP_API_KEY=your-secret-api-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000

# Logging
LOG_LEVEL=info

# Database (MongoDB)
DATABASE_URL="mongodb://localhost:27017/mcp_portfolio"

# OpenAI (optional, used for embeddings in RAG)
# If not set, the server falls back to a local hashing-based embedding.
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
