// Prisma schema for MongoDB
// Datasource uses DATABASE_URL from .env

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  category  String
  price     Int
  createdAt DateTime @default(now())
}

model Ticket {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  body      String
  priority  String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
